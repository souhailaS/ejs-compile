{
  "name": "ejsc-views",
  "version": "2.0.1",
  "description": "Compile all views/*.ejs files into a single /public/js/views.js file",
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "bin": {
    "ejsc": "./bin/ejsc.js"
  },
  "scripts": {
    "test": "node bin/ejsc.js --views test/views --output test/output --details && node test/verify-output.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/souhailaS/ejs-compile.git"
  },
  "keywords": [
    "ejs",
    "compile",
    "views",
    "express.js"
  ],
  "author": "souhaila serbout, cesare pautasso",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/souhailaS/ejs-compile/issues"
  },
  "homepage": "https://github.com/souhailaS/ejs-compile#readme",
  "dependencies": {
    "ansicolor": "^1.1.100",
    "commander": "^9.4.1",
    "ejs": "^3.1.8",
    "glob": "^11.0.0"
  }
}
